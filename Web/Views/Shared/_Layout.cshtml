<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/ExtJs/resources/css/ext-all-neptune.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    @if (Context.IsDebuggingEnabled)
    {
        if (true)
        {
    <script src="@Url.Content("~/ExtJs/ext-all-debug.js")" type="text/javascript"></script>
        }
        else
        {
    <script src="@Url.Content("~/ExtJs/ext-all-debug-w-comments.js")" type="text/javascript"></script>
        }
    }
    else
    {
    <script src="@Url.Content("~/ExtJs/ext-all.js")" type="text/javascript"></script>
    }
    <script src="@Url.Content("~/ExtJs/ext-lang-zh_CN.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Rafy.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/RafyEntity.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/RafyCommands.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/RafyPluginsCode.js")" type="text/javascript"></script>
    @RenderSection("head")
</head>
<body>
    @RenderBody()
</body>
</html>
