<UserControl
    x:Class="OEA.Module.WPF.Layout.DetailLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.codeplex.com/CompositeWPF"
    xmlns:caliburn="http://www.caliburnproject.org"
    xmlns:av="http://schemas.codeplex.com/wpfcontrib/xaml/presentation"
    xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock">
    <ad:ResizingPanel Name="container">
        <DockPanel Name="detail">
            <ContentControl DockPanel.Dock="Top" x:Name="toolBarContainer"/>
            <ContentControl Name="result"/>
        </DockPanel>
        <TabControl Name="childrenTab"/>
    </ad:ResizingPanel>
</UserControl>