<UserControl x:Class="JXC.WPF.BillQueryLayout" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:rafy="clr-namespace:Rafy.WPF.Controls;assembly=Rafy.WPF" mc:Ignorable="d" d:DesignHeight="300"
        d:DesignWidth="300">
    <rafy:ResizingPanel Name="container">
        <Border rafy:ResizingPanel.ResizeWidth="2*" BorderBrush="{StaticResource ControlBorderBrush}"
                BorderThickness="0,0,1,0" Padding="0,0,4,0">
            <StackPanel>
                <ContentControl Name="commands" />
                <ContentControl Name="main" />
            </StackPanel>
        </Border>
        <TabControl rafy:ResizingPanel.ResizeWidth="8*" Name="queryResult" />
    </rafy:ResizingPanel>
</UserControl>
