<UserControl x:Class="JXC.WPF.BillQueryLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <ad:ResizingPanel Name="container">
        <Border ad:ResizingPanel.ResizeWidth="2*" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" Padding="0,0,4,0">
            <StackPanel>
                <ContentControl Name="commands"/>
                <ContentControl Name="main"/>
            </StackPanel>
        </Border>
        <TabControl ad:ResizingPanel.ResizeWidth="8*" Name="queryResult"/>
    </ad:ResizingPanel>
</UserControl>
