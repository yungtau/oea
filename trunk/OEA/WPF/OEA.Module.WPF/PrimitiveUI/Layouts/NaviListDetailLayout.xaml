<local:TraditionalLayout
    x:Class="OEA.Module.WPF.Layout.NaviListDetailLayout"
    xmlns:local="clr-namespace:OEA.Module.WPF.Layout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.codeplex.com/CompositeWPF"
    xmlns:caliburn="http://www.caliburnproject.org"
    xmlns:oea="clr-namespace:OEA.Module.WPF"
    xmlns:av="http://schemas.codeplex.com/wpfcontrib/xaml/presentation"
    xmlns:ad="clr-namespace:AvalonDock;assembly=AvalonDock"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignWidth="800" d:DesignHeight="500">
    <DockPanel>
        <ContentControl x:Name="toolBarContainer" DockPanel.Dock="Top"/>
        <ad:ResizingPanel Name="container">
			<DockPanel Name="mainPart">
                <ContentControl Name="navigate" DockPanel.Dock="Top"/>
                <ContentControl Name="main"/>
            </DockPanel>
			<DockPanel Name="resultChildren">
				<ContentControl Name="result" DockPanel.Dock="Top"/>
				<!--当没有 childrenTab 时，result 也不能放到最大，所以加入一个冗余的 ContentControl-->
				<ContentControl DockPanel.Dock="Top"/>
				<TabControl Name="childrenTab"/>
            </DockPanel>
        </ad:ResizingPanel>
    </DockPanel>
</local:TraditionalLayout>