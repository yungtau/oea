<UserControl x:Class="Demo.WPF.BookDetailPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:oea="clr-namespace:OEA.Module.WPF.Controls;assembly=OEA.Module.WPF"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <DockPanel>
        <WrapPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <oea:EditorHost EntityProperty="Name" Width="380"/>
            <oea:EditorHost EntityProperty="Author" Width="380"/>
            <oea:EditorHost EntityProperty="Amount" Width="380"/>
            <oea:EditorHost EntityProperty="PublishTime" Width="380"/>
            <oea:EditorHost EntityProperty="BookCategoryId" Width="380"/>
        </WrapPanel>
        <StackPanel>
            <oea:EditorHost EntityProperty="Publisher"/>
            <oea:EditorHost EntityProperty="SubContent" Height="300"/>
        </StackPanel>
    </DockPanel>
</UserControl>
